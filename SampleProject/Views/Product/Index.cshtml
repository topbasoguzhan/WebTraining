@*@model List<SampleProject.Models.Product>*@
@*Yukarıda görülen küçük model ile gelen datanın hangi türde olduğunu bildiriyoruz.*@
@*Aşağıdaki Model ile de yukardaki model ile belirtilen türdeki datayı yakalıyor.*@

@*<ul>
    @foreach (var product in Model)
    {
        <li>@product.ProductName</li>
    }
</ul>*@

<h3>ViewBag kontrolüyle datayı gönderdik</h3>
<ul>
    @foreach (var product in ViewBag.products as List<SampleProject.Models.Product>)
    {
        <li>@product.ProductName</li>
    }
</ul>

<h3>ViewData kontrolüyle datayı gönderdi</h3>
<ul>
    @foreach (var product in ViewData["products"] as List<SampleProject.Models.Product>)
    {
        <li>@product.ProductName</li>
    }
</ul>

<h3>TempData kontrolüyle datayı gönderdi</h3>
<ul>
    @foreach (var product in TempData["products"] as List<SampleProject.Models.Product>)
    {
        <li>@product.ProductName</li>
    }
</ul>


